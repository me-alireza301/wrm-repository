<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "dtds/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<!-- Los errores ir치n a parar al siguiente archivo:  -->
	<appender name="error_file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="spring-ws-example_error.log" />
		<param name="MaxFileSize" value="2000000" />
		<param name="MaxBackupIndex" value="5" />
		<param name="Threshold" value="WARN" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%n%d{yyyy-MM-dd HH:mm:ss} [%-5p] [%l] %n%m%n" />
		</layout>
	</appender>
	<!--
		Todas las trazas (debug, warn, error, etc.) ir치n a parar a este
		archivo:
	-->
	<appender name="debug_file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="spring-ws-example_debug.log" />
		<param name="MaxFileSize" value="5000000" />
		<param name="MaxBackupIndex" value="5" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%n%d{yyyy-MM-dd HH:mm:ss} [%-5p] [%l] %n%m%n" />
		</layout>
	</appender>
	<!--
		Habilitamos s칩lo los logs de nivel warning o superior para toda la
		aplicaci칩n
	-->
	<root>
		<level value="warn" />
		<appender-ref ref="error_file" />
	</root>
	<!--
		Habilitamos todos los LOGS de todas las clases del paquete
		pe.com.spring.ws.example (y subpaquetes):
	-->
	<category name="pe.com.spring.ws.example">
		<priority value="debug" />
		<appender-ref ref="debug_file" />
	</category>
</log4j:configuration>